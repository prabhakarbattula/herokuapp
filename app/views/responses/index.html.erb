<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Incumbent</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Mla.all.each do |mla| %>
      <tr>
        <td><%= mla.name %></td>
        <td><%= mla.incumbent %></td>
        <% if selected = current_user.responses.where(seat: mla).first %>
          <td><%= selected.nomination.candidate %>/ <%= selected.nomination.party.name %></td>
        <% else %>
          <td><%= link_to 'Vote', new_response_path(seat_id: mla) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
