<% if current_user %>
  <div class="btn-group">
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
      <%= current_user.name %>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <!-- dropdown menu links -->
      <% if current_user %>
        <li>
          <%= link_to "Sign Out", signout_path %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
